---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  keywords?: string[];
  image?: string;
  canonicalURL?: string;
}

const {
  title = 'test-fixed-templates',
  description = '测试修复后的模板',
  keywords = [],
  image = '/og-image.png',
  canonicalURL = Astro.url.href,
} = Astro.props;

const siteTitle = title ? `${title} | test-fixed-templates` : 'test-fixed-templates';
---

<!DOCTYPE html>
<html lang="zh-CN" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(', ')} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{siteTitle}</title>
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />
    
    <!-- Twitter Card -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={siteTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />
    
    <!-- Theme -->
    <meta name="theme-color" content="#3b82f6" />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="test-fixed-templates RSS Feed" href="/rss.xml" />
    
    <!-- Preload critical assets -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body class="bg-background text-text min-h-screen flex flex-col">
    <Header />
    
    <main class="flex-1">
      <slot />
    </main>
    
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #3b82f6;
    --color-accent: #f59e0b;
    --color-secondary: #6B7280;
    --color-background: #FFFFFF;
    --color-text: #1F2937;
  }
  
  html {
    font-family: Inter, system-ui, sans-serif;
  }
  
  code {
    font-family: JetBrains Mono, Consolas, monospace;
  }
</style> 