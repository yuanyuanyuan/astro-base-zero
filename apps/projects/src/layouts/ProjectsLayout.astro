---
// ProjectsLayout.astro - 项目管理应用布局
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Astro项目快速发布平台 - 项目管理' } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/astro-base-zero/favicon.svg" />
    <title>{title} - Astro Base Zero</title>
  </head>
  <body class="bg-secondary-50">
    <div class="min-h-screen">
      <!-- 顶部导航栏 -->
      <nav class="bg-white border-b border-secondary-200 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <!-- Logo 和品牌名 -->
            <div class="flex items-center">
              <div class="flex-shrink-0 flex items-center">
                <div class="h-8 w-8 bg-primary-600 rounded-lg flex items-center justify-center">
                  <span class="text-white font-bold text-sm">AZ</span>
                </div>
                <span class="ml-2 text-xl font-semibold text-secondary-900">
                  Astro Base Zero
                </span>
              </div>

              <!-- 主导航菜单 -->
              <div class="hidden md:ml-10 md:flex md:space-x-8">
                <a 
                  href="/astro-base-zero/dashboard/" 
                  class="text-secondary-600 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                >
                  概览
                </a>
                <a 
                  href="./" 
                  class="text-secondary-900 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                >
                  项目列表
                </a>
                <a 
                  href="./manage/" 
                  class="text-secondary-600 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                >
                  项目管理
                </a>
                <a 
                  href="/astro-base-zero/dashboard/templates/" 
                  class="text-secondary-600 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                >
                  模板市场
                </a>
                <a 
                  href="/astro-base-zero/docs/" 
                  class="text-secondary-600 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                >
                  文档
                </a>
              </div>
            </div>

            <!-- 右侧操作按钮 -->
            <div class="flex items-center space-x-4">
              <button 
                type="button"
                class="bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors"
              >
                新建项目
              </button>
            </div>
          </div>
        </div>
      </nav>
      
      <!-- 主要内容区域 -->
      <main class="flex-1 min-h-screen">
        <div class="p-8">
          <!-- 页面标题区域 -->
          <div class="mb-8">
            <h1 class="text-3xl font-bold text-secondary-900">{title}</h1>
            {description && (
              <p class="mt-2 text-lg text-secondary-600">{description}</p>
            )}
          </div>
          
          <!-- 页面内容插槽 -->
          <div class="bg-white rounded-lg shadow-sm border border-secondary-200 p-6">
            <slot />
          </div>
        </div>
      </main>
    </div>
  </body>
</html> 