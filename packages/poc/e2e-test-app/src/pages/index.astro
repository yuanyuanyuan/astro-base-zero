---
import Widgets from '@astro-base-zero/ui/components/Widgets.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Widget Registration Test</title>
  </head>
  <body>
    <Widgets
      widgets={[
        {
          name: 'Hero',
          title: 'Dynamic Hero Widget',
          subtitle: 'This widget was rendered by the registration system.',
        },
        {
          name: 'Features',
          items: [
            { title: 'Dynamic Feature 1', description: 'Loaded on demand.' },
            { title: 'Dynamic Feature 2', description: 'Also loaded on demand.' },
          ],
        },
      ]}
    />
  </body>
</html> 