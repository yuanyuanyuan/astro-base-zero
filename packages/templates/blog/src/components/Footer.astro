---
// 从品牌配置中获取社交链接（模板变量会在生成时替换）
const currentYear = new Date().getFullYear();

const quickLinks = [
  { name: '首页', href: '/' },
  { name: '文章', href: '/blog' },
  { name: '分类', href: '/categories' },
  { name: '标签', href: '/tags' },
  { name: 'RSS', href: '/rss.xml' },
];
---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- 博客信息 -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">{{project.name}}</h3>
        <p class="text-gray-600 mb-4">
          {{project.description}}
        </p>
        <p class="text-sm text-gray-500">
          由 {{brand.personal.name}} 创建和维护
        </p>
      </div>
      
      <!-- 快速链接 -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">快速链接</h3>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-600 hover:text-primary transition-colors duration-200"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- 联系方式 -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">联系方式</h3>
        <div class="space-y-2">
          <p class="text-gray-600">
            <span class="font-medium">邮箱:</span> {{brand.personal.email}}
          </p>
          {{#if_exists brand.personal.location}}
          <p class="text-gray-600">
            <span class="font-medium">位置:</span> {{brand.personal.location}}
          </p>
          {{/if_exists}}
        </div>
      </div>
    </div>
    
    <!-- 分割线 -->
    <div class="mt-8 pt-8 border-t border-gray-200">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <!-- Copyright -->
        <div class="text-center md:text-left mb-4 md:mb-0">
          <p class="text-gray-600 text-sm">
            © {currentYear} {{brand.personal.name}}. 
            {{default brand.defaults.copyrightText '保留所有权利。'}}
          </p>
          {{#if_exists brand.defaults.license}}
          <p class="text-gray-500 text-xs mt-1">
            基于 {{brand.defaults.license}} 许可证
          </p>
          {{/if_exists}}
        </div>
        
        <!-- Powered by -->
        <div class="text-center">
          <p class="text-gray-400 text-xs">
            由 <a href="https://astro.build" class="hover:text-primary">Astro</a> 
            和 <a href="#" class="hover:text-primary">Astro Base Zero</a> 强力驱动
          </p>
        </div>
      </div>
    </div>
  </div>
</footer> 