---
// 工具头部组件 - 包含工具相关导航
const navigation = [
  { name: '首页', href: '/' },
  { name: '工具', href: '/tools' },
  { name: '关于', href: '/about' },
  { name: '联系', href: '/contact' },
];
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo & Brand -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <span class="text-xl font-bold text-primary">
            {{project.name}}
          </span>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        {navigation.map(item => (
          <a 
            href={item.href}
            class="text-gray-600 hover:text-primary transition-colors duration-200"
          >
            {item.name}
          </a>
        ))}
      </nav>
      
      <!-- Actions -->
      <div class="hidden md:flex items-center space-x-4">
        {{{project.repository}} && (
          <a
            href="{{project.repository}}"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-primary transition-colors duration-200"
            aria-label="查看源码"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
            </svg>
          </a>
        )}
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="text-gray-600 hover:text-primary focus:outline-none focus:text-primary"
          aria-label="Toggle menu"
          id="mobile-menu-button"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-200">
        {navigation.map(item => (
          <a 
            href={item.href}
            class="block px-3 py-2 text-gray-600 hover:text-primary transition-colors duration-200"
          >
            {item.name}
          </a>
        ))}
        {{{project.repository}} && (
          <a
            href="{{project.repository}}"
            target="_blank"
            rel="noopener noreferrer"
            class="block px-3 py-2 text-gray-600 hover:text-primary transition-colors duration-200"
          >
            查看源码
          </a>
        )}
      </div>
    </div>
  </div>
</header>

<script>
  // 简单的移动端菜单切换
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    
    button?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  });
</script> 