---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Hero, Features } from '@astro-base-zero/ui/widgets';

const heroProps = {
  title: '{{project.name}}',
  subtitle: '{{project.description}}',
  ctas: [
    {
      text: '开始探索',
      href: '#features',
      variant: 'primary' as const,
    },
    {
      text: '查看源码',
      href: '{{project.repository}}',
      variant: 'secondary' as const,
    },
  ],
  image: {
    src: '/hero-image.jpg',
    alt: '{{project.name}} 预览图',
  },
};

const featuresProps = {
  items: [
    {
      title: '⚡ 快速开始',
      description: '基于 Astro 5.0+ 的现代化开发体验，零配置即可开始',
      icon: '⚡',
    },
    {
      title: '🎨 品牌一致',
      description: '自动注入个人品牌资产，保持所有项目的视觉一致性',
      icon: '🎨',
    },
    {
      title: '🔧 类型安全',
      description: '完整的 TypeScript 支持，从开发到部署的端到端类型安全',
      icon: '🔧',
    },
    {
      title: '📱 响应式设计',
      description: '基于 Tailwind CSS 的现代化响应式设计，适配所有设备',
      icon: '📱',
    },
  ],
  layout: 'grid' as const,
};
---

<BaseLayout 
  title="{{project.name}}"
  description="{{project.description}}"
  keywords={['{{project.name}}', '{{brand.personal.name}}', 'Astro', '项目']}
>
  <!-- Hero Section -->
  <Hero {...heroProps} />
  
  <!-- Features Section -->
  <section id="features" class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          特色功能
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          专为现代化项目开发设计的完整解决方案
        </p>
      </div>
      <Features {...featuresProps} />
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-16 bg-primary">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-white mb-4">
        准备开始了吗？
      </h2>
      <p class="text-xl text-white/90 mb-8">
        立即开始构建你的下一个项目
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="#"
          class="bg-white text-primary px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors duration-200"
        >
          查看文档
        </a>
        <a
          href="{{project.repository}}"
          target="_blank"
          rel="noopener noreferrer"
          class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-primary transition-colors duration-200"
        >
          GitHub 仓库
        </a>
      </div>
    </div>
  </section>
</BaseLayout> 